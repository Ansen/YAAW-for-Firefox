{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "version": "1.0",
  "description": "__MSG_description__",
  "homepage_url": "https://github.com/Ansen/YAAW-for-Firefox",
  "default_locale": "en",
  "icons": {
    "32": "images/logo32.png",
    "64": "images/logo64.png",
    "128": "images/logo128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';'unsafe-eval';",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "downloads",
    "downloads.open",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/logo32.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
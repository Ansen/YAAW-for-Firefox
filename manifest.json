{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "version": "1.0",
  "description": "__MSG_description__",
  "homepage_url": "https://github.com/Ansen/YAAW-for-Firefox",
  "default_locale": "en",
  "icons": {
    "32": "src/images/logo32.png",
    "64": "src/images/logo64.png",
    "128": "src/images/logo128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "downloads",
    "downloads.open",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "src/images/logo32.png"
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  }
}